[Unit]
Description=NightOwl Worker Service
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
ExecStart=/opt/nightowl/py3/bin/celery -A nightowl.worker worker
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true
Restart=on-failure

[Install]
WantedBy=multi-user.target
