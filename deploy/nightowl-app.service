[Unit]
Description=NightOwl App Service
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
ExecStart=/opt/nightowl/py3/bin/gunicorn -w 4\
          -b 127.0.0.1:5000 "nightowl.app:create_app()"
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true
Restart=on-failure

[Install]
WantedBy=multi-user.target
